<div class="row m-0 justify-content-center align-items-center vh-100">
  <div class="container mt-5">
    <div class="table-responsive">
      <table class="table table-dark table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ID Clase</th>
            <th scope="col">Nombre</th>
            <th scope="col">Profesor</th>
            <th scope="col">Horario</th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each clase}}
          <tr>
            <th scope="row">{{this.idClases}}</th>
            <td>{{this.NombreClase}}</td>
            <td>{{this.Profesores_DPI}}</td>
            <td>{{this.horarios_idHorarios}}</td>
            <td>
                <a href="/clases/editarC/{{this.idClases}}" class="btn btn-sm btn-warning">Editar</a>
                <a href="/clases/eliminar/{{this.idClases}}" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
            
          </tr>
          {{/each}}
        </tbody>
      </table>
      <center>
        <a href="/clases/agregarC" class="btn btn-lg btn-primary" >Agregar</a>
      </center>
      </div>
  </div>
</div>