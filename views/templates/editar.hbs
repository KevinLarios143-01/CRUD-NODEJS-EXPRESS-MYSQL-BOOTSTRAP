<div class="row m-0 justify-content-center align-items-center vh-100">
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                EDITAR DATOS DE LA PERSONA
            </div>
            
            <div class="card-body">
                {{#each persona}}
                <form action="/personas/editar/{{this.CUI}}" method="POST">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" name="nombre" id="nombre" value="{{this.Nombre}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="apellido">Apellido:</label>
                        <input type="text" name="apellido" id="apellido" value="{{this.Apellido}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="profesion">Profesi√≥n:</label>
                        <input type="text" name="profesion" id="profesion" value="{{this.Profesion}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="edad">Edad:</label>
                        <input type="number" name="edad" id="edad" value="{{this.Edad}}" class="form-control">
                    </div>
                    <div class="form-group" align="center">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </form>
                {{/each}}
            </div>
        </div>
    </div>
</div>