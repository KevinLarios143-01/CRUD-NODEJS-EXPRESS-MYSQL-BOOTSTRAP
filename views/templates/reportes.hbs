<div class="row m-0 justify-content-center align-items-center vh-100">
  <div class="container mt-5">
    <div class="table-responsive">
      <table class="table table-dark table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ID Reporte</th>
            <th scope="col">Motivo</th>
            <th scope="col">Profesor</th>
            <th scope="col">Alumno</th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each reporte}}
          <tr>
            <th scope="row">{{this.IdReporte}}</th>
            <td>{{this.Motivo}}</td>
            <td>{{this.Profesores_DPI}}</td>
            <td>{{this.Alumnos_CUI}}</td>
            <td>
                <a href="/reportes/eliminar/{{this.IdReporte}}" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <center>
        <a href="/reportes/agregarR" class="btn btn-lg btn-primary" >Agregar</a>
      </center>
      </div>
  </div>
</div>