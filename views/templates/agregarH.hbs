<div class="row m-0 justify-content-center align-items-center vh-100">    
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                INGRESAR NUEVO HORARIO
            </div>
            <div class="card-body">
                <center>
                    <img src="/img/logo.png" class="img-fluid" alt="Responsive image">
                </center>
                <form action="/horarios/agregarH" method="POST">
                    <div class="form-group">
                        <label for="idhor">Id Horario:</label>
                        <input type="text" name="idhor" id="idhor" value="" class="form-control" placeholder="Id Horario">
                    </div>
                    <div class="form-group">
                        <label for="hfin">Hora Fin:</label>
                        <input type="time" name="hfin" id="hfin" value="" class="form-control" placeholder="Hora Inicio">
                    </div>
                    <div class="form-group">
                        <label for="hin">Hora Inicio:</label>
                        <input type="time" name="hin" id="hin" value="" class="form-control" placeholder="Hora Inicio">
                    </div>
                    <div class="form-group">
                        <label for="hordia">Día:</label>
                        <input type="text" name="hordia" id="hordia" value="" class="form-control" placeholder="Día">
                    </div>
                    <div class="form-group" align="center">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>