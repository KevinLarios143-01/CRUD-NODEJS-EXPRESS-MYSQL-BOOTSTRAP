<div class="row m-0 justify-content-center align-items-center vh-100">
  <div class="container mt-5">
    <div class="table-responsive">
      <table class="table table-dark table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Profesor</th>
            <th scope="col">Alumno</th>
            <th scope="col">Clase</th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each asistencia}}
          <tr>
            <th scope="row">{{this.Profesores_DPI}}</th>
            <td>{{this.alumnos_CUI}}</td>
            <td>{{this.clases_idClases}}</td>
            <td>
                <a href="/asistencias/eliminar/{{this.ID_Asistencia}}" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <center>
        <a href="/asistencias/agregarAS" class="btn btn-lg btn-primary" >Agregar</a>
      </center>
      </div>
  </div>
</div>